@model AppSeedCode.Models.User

@{
    ViewData["Title"] = "Delete";
}

<br />
<br />
<br />


<h1 class="text-center"><i class="bi bi-trash3"></i> Eliminar</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">


        <div class="card border-danger text-md-center col-md-6">
            <div class="card-header">
                Detalles del Usuario
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row p-2">
                        <div class="form-group col-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control-underline" disabled />
                        </div>
                        <div class="form-group col-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" disabled />
                        </div>
                    </div>
                    <div>

                        <dl class="row">

                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Roles)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Roles.Name)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a class="btn btn-secondary" asp-action="Index"> <i class="bi bi-box-arrow-left"></i> Volver a la Lista</a>
                        </form>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>




