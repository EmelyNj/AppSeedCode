@model AppSeedCode.Models.User

@{
    ViewData["Title"] = "Details";
}
<br />
<br />
<br />


<h1 class="text-center">Detalles</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">

        
            <div class="card border-info col-md-6">
                <div class="card-header text-center">
                    Detalles del Usuarios
                </div>
                <div class="card-body text-md-center">
                    <dl class="row">
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                
                   
                        <dt class="col-sm-10">
                            @Html.DisplayNameFor(model => model.Roles)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Roles.Name)
                        </dd>
                    </dl>

                <div>
                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
                    <a class="btn btn-secondary" asp-action="Index"><i class="bi bi-box-arrow-left"></i> Volver a la Lista</a>
                </div>
                </div>
            </div>
      
    </div>
</div>

