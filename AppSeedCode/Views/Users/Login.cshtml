@model AppSeedCode.Models.User

@{
    ViewData["Title"] = "Login";
}

<br />
<br />
<br />

<h1 class="text-center">Inicio de Sesión</h1>
<hr />

<br />

<div class="row">
    <div class="col-md-6 mx-auto">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control-underline" placeholder="ejemplocorreo@gmail.com"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwordd" class="control-label"></label>
                <input asp-for="Passwordd" class="form-control-underline" placeholder="*****"/>
                <span asp-validation-for="Passwordd" class="text-danger"></span>
            </div>

            <div class="form-group mt-2 text-center">
                <input type="submit" value="Iniciar Sesión" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
