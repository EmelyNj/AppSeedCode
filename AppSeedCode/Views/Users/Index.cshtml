@model IEnumerable<AppSeedCode.Models.User>

@{
    ViewData["Title"] = "Index";
}
 
<br />
<br />
<br />

<h1>Index</h1>
<hr />  

<p>
    <a class="btn btn-success" asp-action="Create"><i class="bi bi-plus-square"></i> Nuevo Usuario</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passwordd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passwordd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.Id)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Editar</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-card-heading"></i> Detalles</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-x-circle"></i> Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
