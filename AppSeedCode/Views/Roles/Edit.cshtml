@model AppSeedCode.Models.Role

@{
    ViewData["Title"] = "Edit";
}
<br />
<br />
<br />

<h1 class="text-center">Editando</h1>
<hr />

<div class="container">
    <div class="row justify-content-center">

<div class="card border-warning text-md-center col-md-4">
    <div class="card-header">
        Editando Rol
    </div>
    <div class="card-body">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-warning" />
                <a class="btn btn-secondary" asp-action="Index"> <i class="bi bi-box-arrow-left"></i> Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
