@model AppSeedCode.Models.Role

@{
    ViewData["Title"] = "Create";
}

<br />
<br />
<br />


<h4 class="text-center">Creando Rol</h4>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger text-center"></div>

                <div class="form-group text-center">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control-underline text-center" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <br />

                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn btn-success" />
                    <a class="btn btn-secondary" asp-action="Index">
                        <i class="bi bi-box-arrow-left"></i> Volver a la Lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
